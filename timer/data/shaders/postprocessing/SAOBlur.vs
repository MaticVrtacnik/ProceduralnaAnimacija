
//INPUTS=======================================================================
layout (location = 0) in vec3 i_vertex;

//OUTPUTS======================================================================
out block{
	vec2 uv;
}OUT;


//CODE=========================================================================
void main()
{
	OUT.uv = i_vertex.xy * 0.5 + 0.5;

	gl_Position = vec4(i_vertex.xy, 0.0, 1.0);
}
